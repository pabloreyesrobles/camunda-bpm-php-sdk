{
  "name": "pabloreyesrobles/camunda-bpm-php-sdk",
  "description": "PHP SDK for camundaBPM process services",
  "license": "Apache-2.0",
  "minimum-stability": "stable",
  "keywords": ["sdk", "camunda", "camunda bpm", "php", "camunda php"],
  "homepage": "http://camunda.org",
  "authors": [
    {
      "name": "Pablo Reyes Robles",
      "email": "your-email@example.com"
    }
  ],

  "require": {
    "php": ">=5.6.0"
  },

  "require-dev": {
    "phpunit/phpunit": "~4.6.0"
  },

  "archive": {
    "exclude": [
      "/procedual/test",
      "/procedual/test/*",
      "/oop/test",
      "/oop/test/*"
    ]
  },

  "autoload": {
    "classmap": ["oop/main/", "procedual/main"]
  }
}